<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout"
    tools:context=".ui.home.PaletteFragment">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/Title"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="Palette"
                android:textSize="55dp"
                android:textColor="@color/black"/>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/colorNumber1"
                android:layout_width="110dp"
                android:layout_height="45dp"
                android:layout_weight="0"
                android:ems="10"
                android:inputType="textPersonName"
                android:textSize="20dp" />

            <ImageButton
                android:id="@+id/ibtn1"
                android:layout_width="45dp"
                android:layout_height="38dp"
                android:layout_weight="0"
                android:backgroundTint="@color/black"
                android:src="@android:drawable/ic_menu_edit" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/colorNumber2"
                android:layout_width="110dp"
                android:layout_height="45dp"
                android:layout_weight="0"
                android:ems="10"
                android:inputType="textPersonName"
                android:textSize="20dp" />

            <ImageButton
                android:id="@+id/ibtn2"
                android:layout_width="45dp"
                android:layout_height="38dp"
                android:layout_weight="0"
                android:backgroundTint="@color/black"
                android:src="@android:drawable/ic_menu_edit" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="184dp"
            android:orientation="horizontal">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btn1"
                android:layout_width="155dp"
                android:layout_height="155dp"
                android:backgroundTint="@color/black"></Button>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="155dp"
                android:layout_height="155dp"
                android:layout_weight="0"
                android:backgroundTint="@color/black"></Button>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="153dp"
            android:layout_weight="0"
            android:orientation="horizontal">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="155dp"
                android:layout_height="155dp"
                android:layout_weight="0"
                android:backgroundTint="@color/black"></Button>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btn4"
                android:layout_width="155dp"
                android:layout_height="155dp"
                android:layout_weight="0"
                android:backgroundTint="@color/black"></Button>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/colorNumber3"
                android:layout_width="110dp"
                android:layout_height="45dp"
                android:layout_weight="0"
                android:ems="10"
                android:inputType="textPersonName"
                android:textSize="20dp" />

            <ImageButton
                android:id="@+id/ibtn3"
                android:layout_width="45dp"
                android:layout_height="38dp"
                android:layout_weight="0"
                android:backgroundTint="@color/black"
                android:src="@android:drawable/ic_menu_edit" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/colorNumber4"
                android:layout_width="110dp"
                android:layout_height="45dp"
                android:layout_weight="0"
                android:ems="10"
                android:inputType="textPersonName"
                android:textSize="20dp" />

            <ImageButton
                android:id="@+id/ibtn4"
                android:layout_width="45dp"
                android:layout_height="38dp"
                android:layout_weight="0"
                android:backgroundTint="@color/black"
                android:src="@android:drawable/ic_menu_edit" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>